<Defs>

<ThingDef Name="EtherApparelBase" Abstract="true" ParentName="ApparelMakeableBase">
  <apparel>
    <tags>
      <li>Etherial</li>
    </tags>
  </apparel>
</ThingDef>


<ThingDef ParentName="EtherApparelBase">
    <defName>Apparel_EtherCultistRobe</defName>
    <label>etherbound robes</label>
    <description>A set of purple and gold robes for followers of Ether. Emblazoned with the Heart and Sight of Ether and bound by a chain, these ceremonial robes represent their desire to break free from the chains of their limiting humanity, and join with the chaotic energy that is Ether herself.</description>
    <graphicData>
      <texPath>CultRobe/CultRobe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.12</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <Cloth>30</Cloth>
      <Steel>60</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>CultRobe/CultRobe</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>EtherTier2</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  
  <ThingDef ParentName="EtherApparelBase">
    <defName>Apparel_EtherMask</defName>
    <label>etherbound mask</label>
    <description>An facade of the shifting gaze of Ether. Those who wear it show piety to Her.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>CultMask/CultMask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>1.4</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PainShockThreshold>0.10</PainShockThreshold>
    </equippedStatOffsets>
    <costList>
      <Cloth>10</Cloth>
      <Steel>30</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>CultMask/CultMask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>EtherTier2</li>
      </tags>
    </apparel>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

</Defs>